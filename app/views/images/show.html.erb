<div class="breadcrumb">
  <%= link_to "regions", regions_path %> /
  <%= region_link(@region) %> /
  <%= link_to "images", region_images_path(@region) %> /
  <%= image_link(@region, @image) %>
</div>

<h2><%= @image %></h2>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">Details</h4>
  </div>

  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>state:</dt>
      <dd><%= image_state(@image.image_state) %></dd>

      <dt>name:</dt>
      <dd><%= @image.name %></dd>

      <dt>description:</dt>
      <dd><%= @image.description %></dd>
    </dl>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">Raw</h4>
  </div>

  <pre><%= JSON.pretty_generate(@image.as_json) %></pre>
</div>
