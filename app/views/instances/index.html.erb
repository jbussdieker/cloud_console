<h2>Instances</h2>

<div class="breadcrumb">
  <%= link_to "regions", regions_path %> /
  <%= region_link(@region) %> /
  <%= link_to "instances", region_instances_path(@region) %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>instance_id</th>
      <th>image_id</th>
      <th>instance_type</th>
      <th>vpc_id</th>
      <th>subnet_id</th>
      <th>instance_state</th>
    </tr>
  </thead>
  <tbody>
    <% @instances.each do |instance| %>
      <tr>
        <td><%= instance_link(@region, instance.instance_id) %></td>
        <td><%= image_link(@region, instance.image_id) %></td>
        <td><%= instance.instance_type %></td>
        <td><%= vpc_link(@region, instance.vpc_id) %></td>
        <td><%= subnet_link(@region, instance.subnet_id) %></td>
        <td><%= instance.instance_state %></td>
      </tr>
    <% end %>
  </tbody>
</table>
