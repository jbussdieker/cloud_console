<h2>VPC</h2>

<div class="breadcrumb">
  <%= link_to "regions", regions_path %> /
  <%= region_link(@region) %> /
  <%= link_to "vpcs", region_vpcs_path(@region) %> /
  <%= vpc_link(@region, @vpc) %>
</div>

<p>
  <b>state: </b><%= vpc_state(@vpc.state) %>
</p>

<p>
  <b>cidr_block: </b><%= @vpc.cidr_block %>
</p>

<p>
  <b>dhcp_options_id: </b><%= @vpc.dhcp_options_id %>
</p>

<p>
  <b>instance_tenancy: </b><%= @vpc.instance_tenancy %>
</p>

<p>
  <b>is_default: </b><%= @vpc.is_default %>
</p>

<p>
  <b>subnets: </b>
  <ul>
    <% @vpc.subnets.sort.each do |subnet| %>
      <li><%= subnet_link(@region, subnet) %></li>
    <% end %>
  </ul>
</p>

<p>
  <b>security groups: </b>
  <ul>
    <% @vpc.groups.sort.each do |group| %>
      <li><%= security_group_link(@region, group) %></li>
    <% end %>
  </ul>
</p>
