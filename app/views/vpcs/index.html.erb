<div class="breadcrumb">
  <%= link_to "regions", regions_path %> /
  <%= region_link(@region) %> /
  <%= link_to "vpcs", region_vpcs_path(@region) %>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">VPCs</h4>
  </div>

  <table class="table" id="vpcs">
    <thead>
      <tr>
        <th>name</th>
        <th>cidr_block</th>
        <th>state</th>
      </tr>
    </thead>
    <tbody>
      <% @vpcs.each do |vpc| %>
        <tr>
          <td><%= vpc_link(@region.id, vpc) %></td>
          <td><%= vpc.cidr_block %></td>
          <td><%= vpc_state(vpc.state) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
