<h2>VPCs</h2>

<div class="breadcrumb">
  <%= link_to "regions", regions_path %> /
  <%= region_link(@region) %> /
  <%= link_to "vpcs", region_vpcs_path(@region) %>
</div>

<table class="table" id="vpcs">
  <thead>
    <tr>
      <th>vpc</th>
      <th>cidr_block</th>
      <th>state</th>
    </tr>
  </thead>
  <tbody>
    <% @vpcs.each do |vpc| %>
      <tr>
        <td><%= vpc_link(@region.id, vpc) %></td>
        <td><%= vpc.cidr_block %></td>
        <td><%= vpc_state(vpc.state) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
